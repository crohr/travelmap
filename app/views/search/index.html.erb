  <div class="font-sans min-h-screen antialiased bg-gray-900 pt-24 pb-5">
    <div class="flex flex-col justify-center sm:w-96 sm:m-auto mx-5 mb-5 space-y-8">
      <h1 class="font-bold text-center text-4xl text-yellow-500">Travel<span class="text-blue-500">Map</span></h1>
			<%= form_with(url: url_for(action: :search), method: :get, remote: false) do |f| %>
        <div class="flex flex-col bg-white p-10 rounded-lg shadow space-y-6">
          <h2 class="font-bold text-xl text-center">Search cities closest to you</h2>
          <div class="flex flex-col space-y-1">
						<%= f.label :latitude %>
						<%= f.number_field :latitude, placeholder: "48.08", min: -90, max: 90, step: 0.01, class: "border-2 rounded px-3 py-2 w-full focus:outline-none focus:border-blue-400 focus:shadow" %>
          </div>

          <div class="flex flex-col space-y-1">
						<%= f.label :longitude %>
						<%= f.number_field :longitude, placeholder: "-1.68", min: -180, max: 180, step: 0.01, class: "border-2 rounded px-3 py-2 w-full focus:outline-none focus:border-blue-400 focus:shadow" %>
          </div>

          <div class="flex flex-col space-y-1">
						<%= f.label :radius %>
						<%= f.number_field :radius, placeholder: "600", class: "border-2 rounded px-3 py-2 w-full focus:outline-none focus:border-blue-400 focus:shadow" %>
          </div>

          <div class="flex flex-col-reverse sm:flex-row sm:justify-between items-center">
						<%= f.submit "Search", class: "bg-blue-500 text-white font-bold px-5 py-2 rounded focus:outline-none shadow hover:bg-blue-700 transition-colors" %>
          </div>
        </div>
			<% end %>
    </div>
  </div>

